<%- include('partials/header') -%>
  <div class="sm mx-32">
    <a class="btn btn-primary" href="/position">Add a New Position</a>
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>" class="text-2xl mt-2 text-zinc-50">
              <p src="/posts[i].companylink%>"><%= posts[i].companylink%></p>
                <div class="flex-row">
                  <p class="text-sm text-zinc-50" src="/posts[i].title%>"><%= posts[i].title%></p>
                  <p class="text-sm text-zinc-50" src="/posts[i].createdAt.toDateString()%>"><%= posts[i].createdAt.toDateString()%></p>
                  <!-- <img class="img-fluid" src="<%= posts[i].image%>"> -->
                </div>
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>