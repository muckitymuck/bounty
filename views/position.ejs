<%- include('partials/header') -%>
<div class="sm mx-32">
  <div class="row ">
      <div class="">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a position</h2>
            <form action="/post/createPosition" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control input input-bordered w-full max-w-cs" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="companylink" class="form-label">Company Link</label>
                <textarea class="form-control textarea textarea-bordered w-full max-w-cs" id="companylink" name="companylink"></textarea>
              </div>
              <div class="mb-3">
                <label for="joblink" class="form-label">Job Link</label>
                <textarea class="form-control textarea textarea-bordered w-full max-w-cs" id="joblink" name="joblink"></textarea>
              </div>
              <div class="mb-3">
                <label for="contacts" class="form-label">Contacts</label>
                <textarea class="form-control textarea textarea-bordered w-full max-w-cs" id="contacts" name="contacts"></textarea>
              </div>
              <div class="mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea class="form-control textarea textarea-bordered w-full max-w-cs" id="notes" name="notes"></textarea>
              </div>
              <!-- <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div> -->
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/hitlist">Return to Hit List</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>